<odoo>
    <data>

        <!-- Inherited from ..addons/product/views/product_views.xml -->
        <record id="mrx_product_template_form_view_manufacturer" model="ir.ui.view">
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="name">mrx.product.template.common.form.view.manufacturer</field>
            <field name="model">product.template</field>
            <field name="priority">514</field>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="mrx_product_manufacturer" />
                </field>
            </field>
        </record>

        <!-- Inherited from ..addons/product/views/product_template_views.xml -->
        <record id="mrx_product_template_tree_view_manufacturer" model="ir.ui.view">
            <field name="inherit_id" ref="product.product_template_tree_view" />
            <field name="name">mrx.product.template.product.tree.view.manufacturer</field>
            <field name="model">product.template</field>
            <field name="priority">514</field>
            <field name="arch" type="xml">
                <field name="sequence" position="after">
                    <field name="mrx_product_manufacturer" optional="hide" />
                </field>
            </field>
        </record>

        <!-- Create Manufacturers model default tree view -->
        <record id="mrx_product_manufacturer_list_view" model="ir.ui.view">
            <field name="name">mrx.product.manufacturer.list</field>
            <field name="model">mrx.product.manufacturer</field>
            <field name="arch" type="xml">
                <tree string="Manufacturers" editable="bottom" multi_edit="false" duplicate="false">
                    <field name="name"/>
                    <field name="id"/>
                </tree>
            </field>
        </record>

        <!-- Create menu items and actions for Manufacturers menuitem-->
        <record id="mrx_product_manufacturer_menu_action" model="ir.actions.act_window">
            <field name="name">Manufacturers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrx.product.manufacturer</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="mrx_product_manufacturer_list_view"/>
        </record>

        <menuitem id="mrx_product_manufacturer_purchase_menuitem" name="Manufacturers"
                  parent="purchase.menu_purchase_config" action="mrx_product_manufacturer_menu_action" sequence="4"/>

        <menuitem id="mrx_product_manufacturer_sale_menuitem" name="Manufacturers"
                  parent="sale.menu_sale_config" action="mrx_product_manufacturer_menu_action" sequence="4"/>

    </data>
</odoo>