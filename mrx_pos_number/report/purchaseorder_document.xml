<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="mrx_report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//th[@name='th_description']" position="before">
            <th name="th_pos"><strong>Pos.</strong></th>
        </xpath>
        <xpath expr="//td[@id='product']" position="before">
            <td name="td_pos">
                <span t-field="line.mrx_pos_number"/>
            </td>
        </xpath>
    </template>
</odoo>
