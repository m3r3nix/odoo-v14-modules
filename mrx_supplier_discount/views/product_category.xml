<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherited product category form view -->
        <record id="mrx_product_category_form_view" model="ir.ui.view">
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="name">mrx.product.category.form</field>
            <field name="model">product.category</field>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="mrx_seller_ids" position="inside">
                        <tree string="Vendor Discount" editable="bottom">
                            <field name="name" invisible="1"/>
                            <field name="partner_id"/>
                            <field name="discount"/>
                        </tree>
                    </field>
                </field>
            </field>
        </record>
    </data>
</odoo>