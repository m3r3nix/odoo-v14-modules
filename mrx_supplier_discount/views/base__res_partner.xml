<odoo>
    <data>

        <record id="mrx_product_vendordiscount_button_action" model="ir.actions.act_window">
            <field name="name">Vendor Discount</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrx.product.vendordiscount</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('partner_id', '=', active_id)]</field>
            <field name="context">{'default_partner_id': active_id}</field>
        </record>

        <record id="mrx_partner_view_buttons_vendordiscount" model="ir.ui.view">
            <field name="name">mrx.partner.view.buttons.vendordiscount</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button string="Discounts" icon="fa-percent" type="action" name="%(mrx_product_vendordiscount_button_action)d"
                        groups="purchase.group_purchase_user,purchase.group_purchase_manager" />
                </div>
            </field>
        </record>

    </data>
</odoo>
