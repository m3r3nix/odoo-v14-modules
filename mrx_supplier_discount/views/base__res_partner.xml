<odoo>
    <data>

        <!-- Inherited partner form view from ../addons/base/views/res_partner_views.xml -->
        <record id="mrx_view_partner_form" model="ir.ui.view">
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="name">mrx.res.partner.form.vendordiscount</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <page name="sales_purchases" position="after">
                    <page name="discount" string="Discount">
                        <field name="mrx_category_ids" nolabel="1" position="inside">
                            <tree string="Vendor Discount" editable="bottom">
                                <field name="name"/>
                                <field name="partner_id" invisible="1"/>
                                <field name="discount"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

    </data>
</odoo>