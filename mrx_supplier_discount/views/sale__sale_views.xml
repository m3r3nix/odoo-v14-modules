<odoo>
    <data>

        <!-- Inherited from ../addons/sale/views/sale_views.xml -->
        <record id="mrx_view_order_form" model="ir.ui.view">
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="name">mrx.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="512"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='order_line']/form/group/group/field[@name='price_unit']" position="after">
                    <field name="mrx_pricing_unit"/>
                </xpath>
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="mrx_pricing_unit" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- Creates Manufacturer Price Group model default form view -->
        <record id="mrx_manufacturer_pricegroup_form_view" model="ir.ui.view">
            <field name="name">mrx.manufacturer.pricegroup.form.view</field>
            <field name="model">mrx.manufacturer.pricegroup</field>
            <field name="arch" type="xml">
                <form string="Vendor Discount">
                    <sheet>
                        <group>
                            <field name="manufacturer_id" class="oe_inline" options="{'no_create':true, 'no_open':true}" readonly="True"/>
                            <field name="name" class="oe_inline" options="{'no_create':true, 'no_open':true}" readonly="True"/>
                            <field name="partner_ids">
                                <tree string="Discounts" editable="bottom" duplicate="false">
                                    <field name="partner_id"/>
                                    <field name="discount"/>
                                    <field name="id" optional="hide"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Creates Manufacturer Price Group model default tree view -->
        <record id="mrx_manufacturer_pricegroup_tree_view" model="ir.ui.view">
            <field name="name">mrx.manufacturer.pricegroup.tree.view</field>
            <field name="model">mrx.manufacturer.pricegroup</field>
            <field name="arch" type="xml">
                <tree string="Price Group" editable="bottom" duplicate="false">
                    <field name="manufacturer_id" options="{'no_create':true, 'no_open':true}" optional="hide"/>
                    <field name="name"/>
                    <field name="id" optional="hide"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
