<odoo>
    <data>

        <!-- Inherited from ../addons/sale/views/sale_views.xml -->
        <record id="mrx_view_order_form" model="ir.ui.view">
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="name">mrx.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="512"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='order_line']/form/group/group/field[@name='price_unit']" position="after">
                    <field name="mrx_pricing_unit"/>
                </xpath>
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="mrx_pricing_unit" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- Creates Manufacturer Price Group model default tree view -->
        <record id="mrx_manufacturer_pricegroup_tree_view" model="ir.ui.view">
            <field name="name">mrx.manufacturer.pricegroup.tree.view</field>
            <field name="model">mrx.manufacturer.pricegroup</field>
            <field name="arch" type="xml">
                <tree string="Price Group" editable="bottom" multi_edit="true" duplicate="false">
                    <field name="manufacturer_id" options="{'no_create':true, 'no_open':true}"/>
                    <field name="name"/>
                    <field name="id" optional="hide"/>
                </tree>
            </field>
        </record>

        <!-- Creates new menu item and action for Price Groups in Sales App -->
        <record id="mrx_manufacturer_pricegroup_menu_action" model="ir.actions.act_window">
            <field name="name">Price Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrx.manufacturer.pricegroup</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="mrx_manufacturer_pricegroup_tree_view"/>
        </record>

        <menuitem id="manufacturer_pricegroup_menu" name="Price Groups"
                  parent="sale.menu_sale_config" action="mrx_manufacturer_pricegroup_menu_action" sequence="3"/>

    </data>
</odoo>
