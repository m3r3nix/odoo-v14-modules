<odoo>
    <data>

        <!-- Inherited product form view from ../addons/product/views/product_views.xml -->
        <record id="mrx_product_template_form_view" model="ir.ui.view">
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="name">mrx_product.template.common.form</field>
            <field name="model">product.template</field>
            <field name="priority">512</field>
            <field name="arch" type="xml">
                <div name="pricing" position="after">
                    <field name="mrx_pricing_unit"/>
                    <field name="mrx_packaging_unit"/>
                    <field name="mrx_moq"/>
                </div>
            </field>
        </record>

        <!-- Inherited product tree view from ../addons/product/views/product_template_views.xml -->
        <record id="mrx_product_template_tree_view" model="ir.ui.view">
            <field name="inherit_id" ref="product.product_template_tree_view" />
            <field name="name">mrx_product.product.tree</field>
            <field name="model">product.template</field>
            <field name="priority">512</field>
            <field name="arch" type="xml">
                <field name="list_price" position="before">
                    <field name="mrx_moq" optional="show"/>
                    <field name="mrx_packaging_unit" optional="show"/>
                    <field name="mrx_pricing_unit" optional="show"/>
                </field>
            </field>
        </record>

        <!-- Inherited product category form view from ../addons/product/views/product_views.xml -->
        <record id="mrx_product_category_form_view" model="ir.ui.view">
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="name">mrx.product.category.form</field>
            <field name="model">product.category</field>
            <field name="priority">512</field>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="mrx_seller_ids" position="inside">
                        <tree string="Vendor Discount" editable="bottom">
                            <field name="name" invisible="1"/>
                            <field name="partner_id"/>
                            <field name="discount"/>
                        </tree>
                    </field>
                </field>
            </field>
        </record>

        <!-- Inherited supplierinfo form view from ../addons/product/views/product_views.xml -->
        <record id="mrx_product_supplierinfo_form_view" model="ir.ui.view">
            <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
            <field name="model">product.supplierinfo</field>
            <field name="name">mrx.product.supplierinfo.form.view</field>
            <field name="priority">512</field>
            <field name="arch" type="xml">
                <label for="min_qty" position="attributes">
                    <attribute name="string">MOQ</attribute>
                </label>
                <label for="price" position="before">
                    <field name="mrx_packaging_unit" class="oe_inline"/>
                    <field name="mrx_pricing_type" widget="radio"/>
                </label>
                <label for="date_start" position="before">
                    <field name="mrx_pricing_unit" class="oe_inline"/>
                    <label for="mrx_unique_discount"/>
                    <div>
                        <span>
                            <field name="mrx_unique_discount_boolean" nolabel="1" class="oe_inline"/>
                        </span>
                        <span attrs="{'invisible':[('mrx_unique_discount_boolean', '!=', True)]}"> 
                            <field name="mrx_unique_discount" class="oe_inline" attrs="{'readonly':[('mrx_unique_discount_boolean', '!=', True)]}"/> %
                        </span>
                    </div>
                    <label for="mrx_category_discount" attrs="{'invisible':['|', ('mrx_unique_discount_boolean', '!=', False), ('mrx_pricing_type', '!=', 'discount')]}"/>
                    <div attrs="{'invisible':['|', ('mrx_unique_discount_boolean', '!=', False), ('mrx_pricing_type', '!=', 'discount')]}"> 
                        <field name="mrx_category_discount" class="oe_inline" attrs="{'readonly': True}"/> %
                    </div>
                    <label for="mrx_discount" attrs="{'invisible': True}"/>
                    <div attrs="{'invisible': True}"> 
                        <field name="mrx_discount" class="oe_inline" attrs="{'readonly': True, 'invisible': True}"/> %
                    </div>
                    <field name="mrx_computed_purchase_price" class="oe_inline" attrs="{'readonly': True}"/>
                    <field name="currency_id" class="oe_inline" groups="base.group_multi_currency"/>
                </label>
                <field name="company_id" position="after">
                    <field name="product_tmpl_id" position="move"/>
                </field>
                <field name="product_tmpl_id" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="invisible">0</attribute>
                </field>
                <field name="product_tmpl_id" position="after">
                    <field name="mrx_product_category" readonly="1"/>
                </field>
            </field>
        </record>

        <!-- Inherited supplierinfo tree view from ../addons/product/views/product_views.xml -->
        <record id="mrx_product_supplierinfo_tree_view" model="ir.ui.view">
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="model">product.supplierinfo</field>
            <field name="name">mrx.product.supplierinfo.tree.view</field>
            <field name="priority">512</field>
            <field name="arch" type="xml">
                <xpath expr="//tree[1]" position="attributes">
                    <attribute name="editable">bottom</attribute>
                </xpath>
                <field name="name" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
                <field name="name" position="after">
                    <field name="product_code" optional="hide"/>
                    <field name="product_name" optional="hide"/>
                    <field name="delay" string="Delivery Time" optional="show"/>
                </field>
                <field name="product_tmpl_id" position="attributes">
                    <attribute name="optional">hide</attribute>
                    <attribute name="invisible">0</attribute>
                    <attribute name="readonly">0</attribute>
                </field>
                <field name="company_id" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="min_qty" position="attributes">
                    <attribute name="string">MOQ</attribute>
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="price" position="before">
                    <field name="mrx_packaging_unit" optional="hide"/>
                    <field name="mrx_pricing_type" optional="show"/>
                </field>
                <field name="price" position="after">
                    <field name="mrx_pricing_unit" optional="show"/>
                    <field name="mrx_unique_discount_boolean" string="Unique Disc." class="text-center" optional="show"/>
                    <field name="mrx_discount" attrs="{'readonly':[('mrx_unique_discount_boolean', '!=', True)]}" optional="show"/>
                    <field name="mrx_computed_purchase_price" attrs="{'readonly': True}" optional="show"/>
                </field>
            </field>
        </record>

    </data>
</odoo>