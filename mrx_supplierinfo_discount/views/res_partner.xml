<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherited partner form view. Add Discount page to the notebook -->
        <record id="mrx_res_partner_discount_form" model="ir.ui.view">
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="name">mrx.res.partner.vendordiscount.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <page name="sales_purchases" position="after">
                    <page name="discount" string="Discount">
                        <group>
                            <group name="discount" string="Purchase Discounts">
                                <field name="mrx_category_ids" nolabel="1" position="inside">
                                    <tree string="Vendor Discount" editable="bottom">
                                        <field name="name"/>
                                        <field name="partner_id" invisible="1"/>
                                        <field name="discount"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </page>
                </page>
            </field>
        </record>
    </data>
</odoo>